import sys
import Utility as util
def userContractPrefixValidation(x):
    validPrefix = ('3','4','5','6','7','8')
    x = util.spaceReplace(x)
    i = 0
    while userContractPrefixInput not in validPrefix and i >= 5:
        i += 1
        if i == 5:
            sys.exit("This program will terminate for security, please try again.")
        x = util.spaceReplace(input("This value is incorrect, please provide the contract prefix: "))
    return x
def userContractNumberValidation(x):
    x = util.spaceReplace(x)
    userContractNumberValidator = 0
    i = 0
    while userContractNumberValidator == 0 and i >= 5:
        try:
            int(x)
            userContractNumberValidator = 1
            return int(x)
        except:
            x = input("This value is incorrect, please provide the 5 digit contract number: ")
            i += 1
            if i == 5:
                sys.exit("This program will terminate for security, please try again.")
