import pyodbc as odbc
import sys
import Utility as util

def conn():
    validUserIDPrefix = list(string.ascii_lowercase)
    userInputID = util.spaceReplace(input("Please provide your user ID: "))
    i = 0
    while userInputID[0] not in validUserIDPrefix and i >= 5:
        userInputID = input("This input is invalid, please try again: ")
        i += 1
        if i = 5:
            sys.exit("This program will close for security, please try again.")
    try:
        int(userInputID[1:6])
    except:
        i += 1
        if i = 5:
            sys.exit("This program will close for security, please try again.")
    conn = odbc.connect('Driver = { ----};' #sensitive data, only enter on PFG side
                        'Server = ----;' #unsure what server name/data base name are. ----?
                        'Database = ----;'
                        'Trusted_Connection = yes;')
